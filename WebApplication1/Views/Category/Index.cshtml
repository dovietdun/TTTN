@model List<WebApplication1.Context.Category>
@{
    ViewBag.Title = "Index";
}



<section class="section-content padding-y">
    <div class="container">

        <nav class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">

                    <div class="card card-category">

                        <div class="img-wrap" style="background: #ffd7d7">
                            <img src="~/Content/images/Category/@item.Avatar">
                        </div>
                        <div class="card-body">
                            <h4 class="card-title"><a href="@Url.Action("ProductCategory","Category", new {Id=item.id})">@item.Name</a></h4>

                        </div>


                    </div>
                </div> <!-- col.// -->
            }


        </nav> <!-- row.// -->


    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->

